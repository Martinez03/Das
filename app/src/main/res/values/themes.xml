<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Das" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores base -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Fondo general y superficies -->
        <item name="android:windowBackground">@color/colorSurface</item>
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Atributos personalizados -->
        <item name="backgroundColor">@android:color/white</item>
        <item name="inputBackgroundColor">#EEEEEE</item>
        <item name="inputStrokeColor">#BDBDBD</item>
        <item name="inputTextColor">#212121</item>
        <item name="inputTextColorHint">#9E9E9E</item>
        <item name="textPrimaryColor">#212121</item>

        <!-- Cards -->
        <item name="cardViewStyle">@style/MyCardViewLight</item>
    </style>

    <style name="MyCardViewLight" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>
</resources>
