<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Das" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color primario (igual que light) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Fondo general -->
        <item name="android:windowBackground">@color/colorSurfaceDark</item>
        <item name="colorSurface">@color/colorSurfaceDark</item>

        <!-- Atributos personalizados -->
        <item name="backgroundColor">@color/colorSurfaceDark</item>
        <item name="inputBackgroundColor">#313131</item>
        <item name="inputStrokeColor">#BDBDBD</item>
        <item name="inputTextColor">@android:color/white</item>
        <item name="inputTextColorHint">@android:color/darker_gray</item>
        <item name="textPrimaryColor">@android:color/white</item>

        <!-- Cards -->
        <item name="cardViewStyle">@style/MyCardViewDark</item>
    </style>

    <style name="MyCardViewDark" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardBackgroundDark</item>
    </style>
</resources>
